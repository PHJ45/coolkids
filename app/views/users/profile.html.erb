<div class="card hovercard" style="margin:0 auto;">
  <img src="http://greenjersey.org/wp-content/uploads/2008/08/newyorkskyline.gif" alt=""/>
  <div class="avatar">
    <img src="<%= current_user.img_url %>" style="border: 4px solid white">
  </div>
  <div class="info">
    <div class="title">
      <%= current_user.name %>
    </div>
    <div class="desc">Cards to Share: <span class="badge"><%= current_user.created_venues.count %></span>
    </div>
    <div class="desc">Trades:  <span class="badge"><%= current_user.shares.count %></span> </div>
    <div class="desc">Member Since: <%=time_ago_in_words(current_user.created_at) %> ago</div>
   </div>
</div>
<br>
<div style="border: 1px #bdc3c7 solid;"></div>


<% current_user.created_venues.each do |venue| %> 
<div class="card">
   <div class="card-heading image">
    <img src="<%= venue.creator.img_url %>">
    <div class="card-heading-header">
      <h3><%= venue.name %></h3>
        <span>Added by <%= venue.creator.twitter_handle %></span><br>
        <span><%= time_ago_in_words(venue.created_at)%> ago</span>
      </div>
    </div>
    <div class="card-body">
      <p><strong>Address:</strong><%=venue.address%> <br><strong>Cross Streets:</strong><%=venue.cross_street%> 
      </p>
    </div>
    <div class="card-media">
      <%= link_to venue do %>
      <a class="card-media-container" href="#" >
        <img src="http://placehold.it/300x200" alt="media"/>
      </a>
      <% end %>
    </div>

  <div class="card-comments">
    <div class="comments-collapse-toggle">
      <a data-toggle="collapse" data-target="#c1-comments" href="#c1-comments"><%=venue.reviews.count%> comments <i class="icon-angle-down"></i></a>
    </div>
    <div id="c1-comments" class="comments collapse">
    <div class="media">
            <a class="pull-left" href="#">
               <img class="media-object" data-src="holder.js/28x28" alt="avatar"/>
            </a>
            <div class="media-body">
               <h4 class="media-heading">Comment title</h4>
               <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam...</p>
            </div>
         </div>
      </div>
   </div>
</div>
<% end %>




