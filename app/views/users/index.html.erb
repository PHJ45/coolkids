
<% @users.each do |user| %>
<div class="card hovercard">
   <img src="http://greenjersey.org/wp-content/uploads/2008/08/newyorkskyline.gif" alt=""/>
   <div class="avatar">
      <img src="<%= current_user.img_url %>"style="border:4px solid white;">
   </div>
   <div class="info">
      <div class="title">
         <%= user.name %>
      </div>
      <div class="desc">Cards to Share: <span class="badge"><%= user.created_venues.count %></span>
      </div>
      <div class="desc">Trades:  <span class="badge"><%= user.shares.count %></span> </div>
      <div class="desc">Member Since: <%=time_ago_in_words(user.created_at) %> ago</div>
   </div>
   <div class="bottom">
    <%= form_tag("/shares", method: "get") do %>
      <input type="submit" value="Trade with <%= user.name %>">
   </div>
  <input type="hidden" name="reciever_id" value="<%= user.id %>">
</div>
  <% end %>
<% end %>




